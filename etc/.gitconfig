[user]
#    name = Sebastian Eichelbaum
#    email = code@nemtics.com

[color]
    ui = auto
[color "branch"]
    current = yellow reverse
    local = yellow
    remote = green
[color "diff"]
    meta = yellow bold
    frag = magenta bold
    old = red bold
    new = green bold
[color "status"]
    added = yellow
    changed = green
    untracked = cyan

[core]
	editor = vim
	excludesfile = /home/seb/.gitignore_global
[push]
	default = simple
[alias]
	co = checkout
	ci = commit
	st = status
	br = branch
	dirdiff = !git difftool --tool vimdirdiff --dir-diff
	vimdiff = difftool

[include]
    # Link the default to this.
    path = ~/.gitconfig_extra

[pull]
	rebase = false

# Diffing
[difftool "vimdirdiff"]
  cmd = vim -f '+next' '+execute \"DirDiff\" argv(0) argv(1)' $LOCAL $REMOTE '+syntax on'

[diff]
	tool = vimdiff

[difftool]
	prompt = false
[init]
	defaultBranch = main
[credential]
	helper = store
