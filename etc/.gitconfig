[user]
#    name = Sebastian Eichelbaum
#    email = code@nemtics.com

[core]
	editor = vim
    excludesfile = /home/seb/.gitignore_global

[push]
    default = simple

[alias]
	st = status
    #dirdiff = !git difftool --tool vimdirdiff --dir-diff
    #vimdiff = difftool

[include]
    # Link the default to this.
    path = ~/.gitconfig_extra

[pull]
	rebase = false

[init]
	defaultBranch = main

[credential]
	helper = store

[color]
    ui = auto

[color "branch"]
    current = yellow reverse
    local = yellow
    remote = green

[color "diff"]
    meta = yellow bold
    frag = magenta bold
    old = red bold
    new = green bold

[color "status"]
    added = yellow
    changed = green
    untracked = cyan


# Diffing
#[difftool "vimdirdiff"]
#  cmd = vim -f '+next' '+execute \"DirDiff\" argv(0) argv(1)' $LOCAL $REMOTE '+syntax on'
#
#[diff]
#	tool = vimdiff

#[difftool]
#	prompt = false



[core]
    pager = delta

[interactive]
    diffFilter = delta --color-only --features=interactive

[delta]
    features = decorations
    true-color = always
    line-numbers = true

    side-by-side = false

    line-numbers-left-format = ""
    line-numbers-right-format = "â”‚ "



[delta "interactive"]
    keep-plus-minus-markers = false

[delta "decorations"]
    commit-decoration-style = blue ol
    commit-style = raw
    file-style = omit
    hunk-header-decoration-style = blue box
    hunk-header-file-style = red
    hunk-header-line-number-style = "#067a00"
    hunk-header-style = file line-number syntax
